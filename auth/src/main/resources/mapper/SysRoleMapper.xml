    <!--根据角色ID列表获取角色名称列表 -->
    <select id="findRoleNamesByRoleIds" parameterType="java.util.List" resultType="java.lang.String">
        select role_name
        from t_sys_role
        where is_delete = '0'
        and state = '0'
        and role_id in
        <foreach close=")" collection="list" index="index" item="item" open="(" separator=",">
            #{item,jdbcType=VARCHAR}
        </foreach>
    </select>


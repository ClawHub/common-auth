    <!--根据角色ID列表获取资源ID列表 -->
    <select id="findResourceIdsByRoleIds" parameterType="java.util.List" resultType="java.lang.String">
        select resource_id
        from t_role_resource
        where is_delete = '0'
        and role_id in
        <foreach close=")" collection="list" index="index" item="item" open="(" separator=",">
            #{item,jdbcType=VARCHAR}
        </foreach>
    </select>
